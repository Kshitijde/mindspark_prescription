<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Prescriptions </title>
    <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <center>
        <h1>Welcome <%=user.name%></h1>
    </center>
    <% for(var i = prescriptions.length-1; i >= 0 ; i-- ) { %>
    <div class="card" style="width: 50%;margin-left: 25%; margin-top: 5%;">
        <div class="card-body">
          <h4 class="card-title"><%= prescriptions[i].date.toDateString() %></h4>
          <% for(var j = prescriptions[i].medicines.length-1; j >= 0 ; j-- ) { %>
          <p class="card-text"><%= prescriptions[i].medicines[j].medName %> - <%= prescriptions[i].medicines[j].dosage %> </p>
          <%}%>
        </div>
    </div>
    <%}%>
</body>

</html>